{
  // Used only for type checking and linting.
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2017"
  },
  "include": ["src"]
}
